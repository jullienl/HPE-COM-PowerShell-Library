        }
                     
        $ClientID = $Credential.UserName
        $clientSecret = [Runtime.InteropServices.Marshal]::PtrToStringBSTR([Runtime.InteropServices.Marshal]::SecureStringToBSTR($Credential.Password))

        $Authentication = @{
            clientId     = $ClientID
