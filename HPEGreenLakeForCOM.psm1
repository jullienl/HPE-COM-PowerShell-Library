                    }
                }

                
                #----------------------------------------------------------Connect iLOs to Compute Ops Management -----------------------------------------------------------------------------

                "{0} -- Attempting to connect iLO '{1}' to Compute Ops Management!" -f $SerialNumber, $IloIP | Write-Verbose
            
                # If -DisconnectiLOfromOneView switch used: disconnect iLO from Oneview
