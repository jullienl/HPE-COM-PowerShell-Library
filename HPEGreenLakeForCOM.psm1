                                    Throw "Error: '$message' - HTTP status code: '$httpStatusCode'"
                                    
                                }
    
    
                            }
                            else {
    
                                "[{0}] Error: '{1}'" -f $MyInvocation.InvocationName.ToString().ToUpper(), $_ | Write-Verbose
                                Throw $_

                            }
                        }

                    }
                    finally {
                        $retries++
                    }
                    
                }
                else {
