    Param( 
        
        [Parameter (Mandatory)] 
        [ValidateScript({
                if ($HPECOMAPICredentialRegions -contains $_) {
                    $true
                }
                else {
                    Throw "The COM region '$_' is not provisioned in this workspace!"
                }
            })]
        [ArgumentCompleter({
