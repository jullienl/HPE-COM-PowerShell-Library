        * Exception: Information about any exceptions generated during the operation.

   
   #>

    [CmdletBinding()]
    Param( 
        
        [Parameter (Mandatory)] 
        [ValidateScript({
                if ($HPECOMAPICredentialRegions -contains $_) {
                    $true
                }
                else {
                    Throw "The COM region '$_' is not provisioned in this workspace!"
                }
            })]
