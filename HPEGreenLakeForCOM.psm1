                                }
                                elseif ($Description) {
    
                                    "[{0}] Error description: '{1}" -f $MyInvocation.InvocationName.ToString().ToUpper(), $Description | Write-Verbose
                                    Throw "Error: '$message' - HTTP status code: '$httpStatusCode' - Description: '$Description'"
    
                                }
